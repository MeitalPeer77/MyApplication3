<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="15"
    android:padding="10dp"
    tools:context=".Register_step_two">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_height="0px"
            android:layout_weight="2.5"
            android:padding="20dp"
            android:layout_width="match_parent"
            >

            <TextView
                android:id="@+id/running_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Running Profile"
                android:paddingBottom="40dp"
                android:textColor="@color/darkBlue"
                android:textSize="24sp"
                android:textStyle="bold" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView2"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/com_facebook_profile_picture_blank_portrait" />

            <Button
                android:id="@+id/uploadImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView2"
                android:layout_alignParentRight="true"
                android:text="Uplaod" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_below="@id/running_profile"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I am : "
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_alignTop="@+id/radioGroup"
                    android:layout_weight="1"
                    android:text="Male"
                    android:textColor="@color/darkBlue"
                    android:textSize="15sp"
                    app:fontFamily="@font/nunito" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="Female"
                    android:textColor="@color/darkBlue"
                    android:textSize="15sp"
                    app:fontFamily="@font/nunito" />
            </RadioGroup>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:padding="20dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current pace: "
                android:textColor="@color/darkBlue"
                android:textSize="15sp"
                app:fontFamily="@font/nunito" />

            <Spinner
                android:id="@+id/spinner_km"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                app:fontFamily="@font/nunito" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="km/ " />

            <Spinner
                android:id="@+id/spinner_min"
                android:layout_width="80dp"
                android:layout_height="wrap_content">

            </Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="minutes" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="20dp"
            android:layout_weight="2.5">

            <TextView
                android:id="@+id/goal_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingBottom="5dp"
                android:textSize="17sp"
                android:textColor="@color/darkBlue"
                app:fontFamily="@font/nunito"
                android:text="what are your'r goals? " />

            <android.support.v7.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:orientation="vertical"
                app:rowCount="3"
                app:columnCount="2"
                android:padding="5dp"
                app:useDefaultMargins="true"
                android:layout_below="@id/goal_title">

                <ToggleButton
                    android:id="@+id/run_marathon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/toggleselector"
                    android:checked="false"
                    android:textOff="run marathon"
                    android:textOn="run marathon"
                    android:textSize="12sp" />

                <ToggleButton
                    android:id="@+id/run_5K"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/toggleselector"
                    android:checked="false"
                    android:textOff="run 5 Km."
                    android:textOn="run 5 km."
                    android:textSize="12sp" />

                <ToggleButton
                    android:id="@+id/stay_in_shape"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/toggleselector"
                    android:checked="false"
                    android:textOff="stay in shape"
                    android:textOn="stay in shape"
                    android:textSize="12sp" />

                <ToggleButton
                    android:id="@+id/run_for_fun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/toggleselector"
                    android:checked="false"
                    android:textOff="run for fun"
                    android:textOn="run for fun"
                    android:textSize="12sp" />

                <ToggleButton
                    android:id="@+id/run_half_marathon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:background="@drawable/toggleselector"
                    android:checked="false"
                    android:textOff="run half marathon"

                    android:textOn="run half marathon"
                    android:textSize="12sp" />

                <ToggleButton
                    android:id="@+id/run_10K"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:background="@drawable/toggleselector"
                    android:checked="false"
                    android:padding="10dp"
                    android:textOff="run 10 Km."
                    android:textOn="run 10 km."
                    android:textSize="12sp" />
            </android.support.v7.widget.GridLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="2.5">

            <Button

                android:id="@+id/done_register"
                android:layout_width="131dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/editText5"
                android:background="@drawable/button_big"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="Done!"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editText5"
                android:layout_width="343dp"
                android:layout_height="100dp"
                android:layout_below="@id/textView17"
                android:background="@drawable/border"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Your running schedule, where you like to run, and any other info you would like to share!"
                android:inputType="textMultiLine"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="Tell other runners about yourself!"
                android:textSize="16sp" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>