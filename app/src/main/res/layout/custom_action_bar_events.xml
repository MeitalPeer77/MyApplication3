<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id = "@+id/app_bar_event"
    android:layout_width = "match_parent"
    android:layout_height = "wrap_content"
    android:gravity = "center_vertical"
    android:background="@color/darkBlue"
    android:padding = "10dp"
    android:weightSum = "1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        >

        <Button
            android:id="@+id/action_bar_homepage"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="100dp"
            android:background="@drawable/logoblackandwhite"
            android:clickable="true" />


        <Button
            android:id="@+id/action_bar_profile"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/ic_person_white_24dp"
            android:clickable="true"
            android:paddingLeft="50dp"
            android:paddingRight="120dp" />


        <Button
            android:id="@+id/action_bar_matches"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="100dp"
            android:background="@drawable/ic_directions_run_white_24dp"
            android:clickable="true"
            android:paddingLeft="100dp"
            android:paddingTop="10dp" />


        <Button
            android:id="@+id/action_bar_event"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2dp"
            android:background="@drawable/event_pink_24dp"
            android:clickable="true" />

    </RelativeLayout>

</LinearLayout>
