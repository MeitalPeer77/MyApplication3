<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id = "@+id/app_bar"
    android:layout_width = "match_parent"
    android:layout_height = "wrap_content"
    android:gravity = "center_vertical"
    android:padding = "10dp"
    android:weightSum = "1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_weight="0.6">

        <Button
            android:id="@+id/action_bar_profile"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/ic_person_black_24dp"
            android:clickable="true" />
        <Button
            android:id="@+id/action_bar_homepage"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/ic_phone_iphone_black_24dp"
            android:clickable="true" />

        <Button
            android:id="@+id/action_bar_matches"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/ic_directions_run_black_24dp"
            android:clickable="true" />

    </LinearLayout>

</LinearLayout>
