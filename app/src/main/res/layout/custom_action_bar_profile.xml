<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id = "@+id/app_bar"
    android:layout_width = "match_parent"
    android:layout_height = "56dp"
    android:weightSum="6"
    android:gravity = "center_vertical"
    android:background="@color/darkBlue"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:id="@+id/divider"
                android:layout_width="20dp"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/action_bar_profile"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/profile_icon_shadow"
                android:clickable="true"
                android:paddingLeft="50dp"
                android:paddingRight="120dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:id="@+id/divider1"
                android:layout_width="20dp"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/action_bar_event"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/event_icon_color"
                android:clickable="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:id="@+id/divider3"
                android:layout_width="20dp"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/action_bar_matches"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/partner_icon_color"
                android:clickable="true" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0px"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal">

            <View
                android:id="@+id/divider4"
                android:layout_width="0px"
                android:layout_weight="2"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/action_bar_homepage"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@drawable/logo2"
                android:clickable="true" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
