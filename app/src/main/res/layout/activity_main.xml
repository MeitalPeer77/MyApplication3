<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    tools:context=".MainActivity"
    android:layout_gravity="center"
    android:layout_centerHorizontal="true"
    android:weightSum="10"
    app:fontFamily="@font/nunito"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="4.5"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:paddingTop="50dp"
            app:srcCompat="@drawable/couple" />

        <TextView
            android:id="@+id/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Welcome to Running Match"
            android:textColor="@color/darkBlue"
            app:fontFamily="@font/nunito"
            android:textSize="26sp"
            />

        <TextView
            android:id="@+id/app_moto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="10dp"
            android:text="Find the perfect running partner"
            android:textColor="@color/pink"
            app:fontFamily="@font/nunito"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:orientation="vertical"
        android:layout_weight="5"
        >
        <View
            android:id="@+id/divider_top"
            android:layout_width="match_parent"
            android:layout_height="15dp"/>
        <EditText
            android:id="@+id/email"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:drawableLeft="@drawable/ic_email_24dp"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_email_24dp"
            android:hint="email"
            app:fontFamily="@font/nunito"
            android:textSize="15dp"
        />
        <View
            android:id="@+id/divider_3"
            android:layout_width="match_parent"
            android:layout_height="15dp"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="password"
            android:textSize="15dp"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:drawablePadding="5dp"
            app:fontFamily="@font/nunito"
            android:drawableStart="@drawable/ic_lock_outline_black_24dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot password?"
            android:textColor="@color/pink"
            android:fontFamily="@font/nunito"
            android:textSize="10dp"
            android:layout_gravity="right"
            android:paddingRight="60dp"
            />
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

        <Button
            android:id="@+id/login_button"
            android:layout_width="250dp"
            android:layout_height="44dp"
            android:layout_gravity="center"

            android:background="@drawable/button_big"
            android:text="log in"
            app:fontFamily="@font/nunito"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
             />
        <View
            android:id="@+id/divider_2"
            android:layout_width="match_parent"
            android:layout_height="15dp"/>

        <TextView
            android:id="@+id/or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="or connect with"
            android:textColor="@color/pink"
            app:fontFamily="@font/nunito"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"

            >

            <Button
                android:id="@+id/google_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/ic_google"

                />

            <Button
                android:id="@+id/facebook_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/ic_facebook" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_weight="0.5"
        android:layout_gravity="bottom"

        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/dont_have_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/pink"
            android:gravity="bottom"
            android:layout_alignParentBottom="true"
            android:paddingBottom="10dp"
            android:textSize="15sp"
            app:fontFamily="@font/nunito"
            android:text="Don't have an account?" />

        <TextView
            android:id="@+id/sign_up_main_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/dont_have_account"
            android:clickable="true"
            android:gravity="bottom"
            android:textSize="15sp"
            android:paddingLeft="5dp"
            android:paddingBottom="10dp"
            android:text="@string/sign_up_string"
            app:fontFamily="@font/nunito"
            android:textColor="@color/pink" />

    </RelativeLayout>

</LinearLayout>

