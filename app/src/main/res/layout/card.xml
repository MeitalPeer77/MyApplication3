<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="10dp"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="500dp"
    android:layout_gravity="center"
    android:id="@+id/slidelinearlayout"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="500dp"
        android:background="@drawable/customborder"
        android:orientation="vertical"
        android:paddingTop="50dp"
        android:layout_gravity = "center"
        >


        <ImageView
            android:id="@+id/slideimg"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity = "center"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/txttitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_gravity="center"
            android:paddingTop="120dp"
            android:text="runner's name"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:fontFamily="@font/nunito"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/location"
            android:layout_below="@+id/slideimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                app:fontFamily="@font/nunito"
                android:text="1.7 km from you" />
            <ImageView
                android:id="@+id/locationBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_location_on_black_24dp"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/content_layout"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_above="@id/slideimg"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_below="@id/location"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtdescription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:text="Hi, my goal is to fimd a good running partner and to run half marathon. after all running could be fun with a good teamate "
                android:textColor="@android:color/black"
                app:fontFamily="@font/nunito"
                android:textSize="20dp" />


        </LinearLayout>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/content_layout"
            android:layout_gravity="bottom|center"
            android:background="@drawable/ic_cancel_black_24dp"
            android:layout_marginLeft="-50dp"
            android:layout_marginTop="50dp"/>


        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/content_layout"
            android:layout_gravity="bottom|center"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="-40dp"
            android:background="@drawable/ic_check_circle_black_24dp"/>



    </LinearLayout>


    <!--<TextView-->
        <!--android:layout_above="@id/content_layout"-->
        <!--android:id="@+id/logo"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--/>-->

</LinearLayout>
