<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="10dp"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:id="@+id/slidelinearlayout"
    app:cardCornerRadius="10dp">


    <LinearLayout
        android:id="@+id/minutes_text"
        android:layout_width="320dp"
        android:layout_height="363dp"
        android:layout_gravity="center"
        android:background="@drawable/customborder"
        android:orientation="vertical"
        android:paddingTop="25dp"
        android:paddingBottom="5dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/slideimg"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/txttitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="15dp"
            android:paddingTop="120dp"
            android:text="runner's name"
            android:textSize="20sp"
            android:textStyle="bold"
            app:fontFamily="@font/nunito" />

        <LinearLayout
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/slideimg"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/locationBtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_location_on_black_24dp" />

            <TextView
                android:id="@+id/distance_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="distance"
                android:textSize="15sp"
                app:fontFamily="@font/nunito" />

            <TextView
                android:id="@+id/distance_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" km from you   |  "
                android:textSize="15sp"
                app:fontFamily="@font/nunito" />

            <ImageView
                android:id="@+id/watch_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/running"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/km_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="Runs: "
                android:textSize="15sp"

                app:fontFamily="@font/nunito" />

            <TextView
                android:id="@+id/km_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="km"
                android:textSize="15sp"
                app:fontFamily="@font/nunito" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/shoe_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/stopclock" />

            <TextView
                android:id="@+id/time_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="5dp"
                android:text="minutes"
                android:textSize="15sp"
                app:fontFamily="@font/nunito" />

            <TextView
                android:id="@+id/time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=" min"
                android:textSize="15sp"
                app:fontFamily="@font/nunito" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/goals_display"
            android:paddingTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/goals"
                android:text="My Goals: "
                android:paddingRight="10dp"
                />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/icon_10k" />
            <View
                android:id="@+id/divider_top"
                android:layout_width="15dp"
                android:layout_height="match_parent"/>


            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/cardiogram" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/slideimg"
            android:layout_below="@id/goals_display"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtdescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="sample text"
                android:textAlignment="center"
                android:textSize="18dp"
                app:fontFamily="@font/nunito" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>