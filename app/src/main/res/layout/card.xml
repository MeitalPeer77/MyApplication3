<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="10dp"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="430dp"
    android:layout_gravity="center"
    android:id="@+id/slidelinearlayout"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="415dp"
        android:background="@drawable/customborder"
        android:orientation="vertical"
        android:paddingTop="50dp"
        android:layout_gravity = "center"
        >


        <ImageView
            android:id="@+id/slideimg"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity = "center"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/txttitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_gravity="center"
            android:paddingTop="120dp"
            android:text="runner's name"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:fontFamily="@font/nunito"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/location"
            android:layout_below="@+id/slideimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/locationBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_location_on_black_24dp"/>

            <TextView
                android:id="@+id/kmtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fontFamily="@font/nunito"
                android:textSize="15sp"
                android:text="1.7 km from you" />

            <TextView
                android:layout_width="wrap_content"
                android:paddingLeft="5dp"
                android:layout_height="wrap_content"
                app:fontFamily="@font/nunito"
                android:textSize="15sp"
                android:text="  | Short Distance unner" />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
             android:layout_gravity="center"
            android:layout_height="wrap_content"
            app:fontFamily="@font/nunito"
            android:textSize="15sp"
            android:text=" Pace: 5" />

        <LinearLayout
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/slideimg"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_below="@id/location"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtdescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@android:color/black"
                app:fontFamily="@font/nunito"
                android:textSize="18dp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>